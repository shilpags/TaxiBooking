<div class="card">
  <h4 class="text-center white">DRIVER INFO</h4>
  <br>
  <div class="row">
    <div class="col-md-12">
      <% if @driver %>
        <h3 class="text-center white"><%= @driver.name %></h3>
        <h5 class="text-center white"><%= @driver.phone %></h5>
        <h5 class="text-center white"><%= @driver.vehicle %></h5>
      <% end %>
      <% if @driver.name.blank? %>
        <h5 class="text-center white">No Driver Assgined</h5>
      <% end %>
    </div>
  </div>
</div>
